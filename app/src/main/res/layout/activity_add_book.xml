<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_4"
            android:text="Class"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <Spinner
            android:id="@+id/spnClass"
            android:elevation="@dimen/margin_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_16"
            android:text="Subject"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <Spinner
            android:id="@+id/spnSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_16"
            android:text="Start page"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <Spinner
            android:id="@+id/spnStartPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtBookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:hint="Book name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <Button
            android:id="@+id/btnSelectFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:text="Select book"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <ImageView
            android:id="@+id/imvFileSelected"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:src="@android:drawable/checkbox_on_background" />

        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:text="Select image"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <ImageView
            android:id="@+id/imvImageSelected"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:src="@android:drawable/checkbox_on_background" />

        <Button
            android:id="@+id/btnAddBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_20"
            android:text="Add book"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />
    </LinearLayout>
</layout>