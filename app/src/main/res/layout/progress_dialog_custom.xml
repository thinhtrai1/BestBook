<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_progress_dialog"
        android:elevation="@dimen/margin_4"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_8">

        <com.app.bestbook.view.CircularProgressBar
            android:id="@+id/progressBarDownload"
            android:layout_width="@dimen/progress_bar_size"
            android:layout_height="@dimen/progress_bar_size"
            android:layout_gravity="center"
            app:cpb_background_progressbar_width="@dimen/margin_8"
            app:cpb_progressbar_color="@color/green"
            app:cpb_progressbar_width="@dimen/margin_4"
            app:cpb_round_border="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/loading_data"
            android:textColor="@color/green"
            android:textSize="@dimen/text_large"
            android:textStyle="bold" />
    </LinearLayout>
</layout>